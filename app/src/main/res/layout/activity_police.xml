<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.KeepAliveActivity"
    android:background="@drawable/bg">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="32dp"
        android:id="@+id/text_non_title"
        android:textSize="32sp"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:text="Police Service Managements" />

    <Button
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/stop"
        app:layout_constraintRight_toLeftOf="@id/start"
        app:layout_constraintTop_toBottomOf="@id/text_non_title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Stop"/>

    <Button
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/stop"
        android:id="@+id/start"
        app:layout_constraintTop_toBottomOf="@id/text_non_title"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Start"/>

</android.support.constraint.ConstraintLayout>